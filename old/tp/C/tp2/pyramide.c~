#include <stdio.h>
#include <stdlib.h>


void affichecar(int n , char c )
{
int i;
  for (i=0; i<n; i++)
    {
      putchar(c);
}
}  




int main()

{

int hauteur;
int i;
int car=1;
char c;
char esp=' ';
int h = hauteur;
printf("entrez la hauteur de ainsi que le caractere\n");

scanf("%d %c",&hauteur,&c);

for (i=0; i<h;i++)
 {
   affichecar(hauteur-1,esp);
   affichecar(car , c);
   
   printf("\n");  
   car=car+2;
   hauteur--;
 }


return EXIT_SUCCESS;
}


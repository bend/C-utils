CC=gcc
CFLAGS=-W -Wall -Werror -ansi -pedantic
EXEC = test

all: $(EXEC)
$(EXEC): file_reader.o bounded_buffer.o file_test.o
		$(CC) -o $(EXEC) file_reader.o bounded_buffer.o  file_test.o
file_reader.o: ../file_reader.c
		$(CC) -o file_reader.o -c ../file_reader.c $(CFLAGS)
bounded_buffer.o:
		$(CC) -o bounded_buffer.o -c ../bounded_buffer.c $(CFLAGS)
file_test.o: file_test.c file_reader.o bounded_buffer.o
		$(CC) -o file_reader.o bounded_buffer.o  -c file_test.c $(CFLAGS)

.PHONY: clean mrproper
				            
clean:
		@rm *.o
mrproper: clean
		@rm $(EXEC)

